<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight([%level]) %msg%n%rEx</pattern>
        </encoder>
    </appender>

    <root level="${maven.logging.root.level:-INFO}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>